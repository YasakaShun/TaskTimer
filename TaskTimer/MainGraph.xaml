<UserControl x:Class="TaskTimer.MainGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskTimer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300"/>
            <ColumnDefinition Width="Auto" MinWidth="100"/>
        </Grid.ColumnDefinitions>

        <DataGrid 
            Grid.Column="0"
            ItemsSource="{Binding DataContext, Mode=TwoWay, RelativeSource={RelativeSource Self}}"
            AutoGenerateColumns="False"
            >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="名前" MinWidth="100"/>
                <DataGridTextColumn Binding="{Binding Rest}" Header="残り時間" MinWidth="200"/>
                <DataGridTextColumn Binding="{Binding Cycle}" Header="周期" MinWidth="100"/>
                <DataGridTextColumn Binding="{Binding Comment}" Header="コメント" MinWidth="150"/>
            </DataGrid.Columns>
        </DataGrid>
        <ListView Grid.Column="1"
                  ItemsSource="{Binding DataContext, Mode=OneWay, RelativeSource={RelativeSource Self}}"
                  DisplayMemberPath="Name"
                  >
            
        </ListView>
        <!--
                <WindowsFormsHost>
                    <wfc:Chart Name="Chart" />
                </WindowsFormsHost>
                -->
    </Grid>
</UserControl>
