<UserControl x:Class="TaskTimer.MainGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskTimer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- TimeSpan から棒グラフへのコンバータ -->
        <local:TimeSpanToGraph x:Key="TimeToGraph" />
        <!-- DataGrid の各行の ContextMenu -->
        <ContextMenu x:Key="RowContextMenu">
            <MenuItem Header="コピー(Ctrl + C)" Command="{x:Static local:MainWindow.CopyItem}" CommandParameter="{Binding}" />
            <MenuItem Header="貼り付け(Ctrl + V)" Command="{x:Static local:MainWindow.PasteItem}" CommandParameter="{Binding}" />
            <MenuItem Header="削除(Ctrl + D)" Command="{x:Static local:MainWindow.DeleteItem}" CommandParameter="{Binding}" />
        </ContextMenu>
        <!-- DataGrid の各行のスタイル -->
        <Style x:Key="RowStyle" TargetType="DataGridRow">
            <Setter Property="ContextMenu" Value="{StaticResource RowContextMenu}" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300"/>
            <ColumnDefinition Width="Auto" MinWidth="100"/>
        </Grid.ColumnDefinitions>

        <DataGrid 
            Grid.Column="0"
            ItemsSource="{Binding Items, Mode=TwoWay}"
            SelectedItem="{Binding CurrentRowItem}"
            AutoGenerateColumns="False"
            RowStyle="{StaticResource RowStyle}"
            >
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="やった？">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="やった！" 
                                    Command="{x:Static local:MainWindow.DoneItem}"
                                    CommandParameter="{Binding}"
                                    Width="Auto" Height="Auto" Margin="0" 
                                    />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding Name}" Header="名前" MinWidth="100"/>
                <DataGridTemplateColumn Header="残り時間">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Border Height="20" 
                                        Width="{Binding Cycle, Converter={StaticResource TimeToGraph}}"
                                        HorizontalAlignment="Left"
                                        BorderThickness="1"
                                        BorderBrush="Red"
                                        >
                                    <Rectangle 
                                    HorizontalAlignment="Left"
                                    Fill="Blue" 
                                    Width="{Binding Rest, Converter={StaticResource TimeToGraph}}"
                                    />
                                </Border>
                                <TextBlock Text="{Binding Rest}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding Cycle}" Header="周期" />
                <DataGridTextColumn Binding="{Binding Comment}" Header="コメント" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <ListView Grid.Column="1"
                  ItemsSource="{Binding Items, Mode=OneWay}"
                  DisplayMemberPath="Name"
                  >
            
        </ListView>
        <!--
                <WindowsFormsHost>
                    <wfc:Chart Name="Chart" />
                </WindowsFormsHost>
                -->
    </Grid>
</UserControl>
